{% extends 'base.html.twig' %}

{% block title %}Produto{% endblock %}

{% block body %}
<div class="card pt-2 mt-5">
  <div class="card-head">
    <h3 class="card-title text-center">
      Produto
    </h3>
  </div>

  <div class="card-body">
    <p>
      <strong>Título:</strong>
      {{ product.title }}
    </p>

    <p>
      <strong>Descrição:</strong>
      {{ product.description }}
    </p>

    <p>
      <strong>Imagem:</strong>
      <span class="img">
        {{ product.image }}
      </span>
      <br>
      <img id="img" height="100" src="{{ product.image }}">
    </p>

    <p>
      <strong>Estoque:</strong>
      {{ product.stock }}
    </p>
  </div>

  <div class="card-footer row no-gutters">
    <a href="{{ path('product_index') }}" class="btn btn-secondary mr-auto">Voltar</a>
    {{ include('product/_delete_form.html.twig') }}
  </div>
</div>
{% endblock %}
